class Employee:
    def __init__(self, name, salary):
        self.name = name
        self.salary = salary

    def show(self):
        return self.name + ' ' + str(self.salary)

    def increase_salary(self):
        increase_amount = self.salary * 0.10
        self.salary += increase_amount

employee = Employee('john', 3000)
print(employee.show())
employee.increase_salary()
print(employee.show())
